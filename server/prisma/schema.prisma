generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.0.x", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserAccount {
  id           Int     @id @default(autoincrement())
  userId       String  @unique
  userType     String
  phone        String  @unique
  marimeTricou String?
  curse        Cursa[]
}

model Cursa {
  id            Int         @id @default(autoincrement())
  idCursa       String
  userAccount   UserAccount @relation(fields: [userId], references: [userId])
  userId        String
  numarTricou   String?
  categorie     String?
  timpAlergat   DateTime?
  name          String?
  phone         String?
  marimeTricou  String?
  revolute_cash String?
}

